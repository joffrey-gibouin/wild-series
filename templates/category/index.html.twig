{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table category : </h1>
    {% for category in categories %}
        <div>
            <h2><a href="{{ path("category_show", {categoryName: category.name}) }}">{{ category.name }}</a></h2>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
{% endblock %}