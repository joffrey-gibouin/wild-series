{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
        <h1>Toutes les catégories de la table category : </h1>
        <div>
            {% for category in categories %}
                <a href="{{ path("category_show", {categoryName: category.name}) }}">
                    <button type="button" class="btn btn-dark shadow-lg">{{ category.name }}</button>
                </a>
            {% else %}
                Aucune série trouvée.
            {% endfor %}
        </div>
        <div class="my-3">
            <a href="new">
                <button type="button" class="btn btn-outline-dark shadow-lg">ajoute une catégorie</button>
            </a>
        </div>
{% endblock %}