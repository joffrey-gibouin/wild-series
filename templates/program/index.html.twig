{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
        <h1>Toutes les séries de la table program : </h1>
    <div class="m-3">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-dark shadow-lg m-2">search</button>
        {{ form_end(form) }}
    </div>
    {% for program in programs %}
        <div class="m-3 p-2 border border-2 rounded-pill border-primary shadow-lg">
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path("program_show", { slug: program.slug }) }}">
                <button type="button" class="btn btn-dark">Voir la fiche</button>
            </a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <div class="m-3">
        <a href="new">
            <button type="button" class="btn btn-dark shadow-lg">ajoute une série</button>
        </a>
    </div>
{% endblock %}