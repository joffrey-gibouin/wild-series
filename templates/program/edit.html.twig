{% extends 'base.html.twig' %}

{% block title %}Edit programs{% endblock %}

{% block body %}
    <h1>Edit Program</h1>
<div>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>
    <a href="{{ path('program_index') }}">back to list</a>
<div>
    <form method="post" action="{{ path('program_edit', {'slug': program.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ program.id) }}">
        <button class="btn">Delete</button>
    </form>
</div>


{% endblock %}