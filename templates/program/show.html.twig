{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Cat√©gorie : {{ program.category.name }}</p>
        </div>
        <div>
            {% for season in season %}
                <a class="border-0 list-group-item list-group-item-action" href="{{ path("program_season_show", {program_id: program.id, season_id: season.id}) }}">{{ season.description }}</a>
             {% endfor %}
        </div>
    </div>
{% endblock %}